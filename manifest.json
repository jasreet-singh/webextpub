{
  "name": "Page load time",
  "version": "3.2.2",
  "manifest_version": 2,
  "description": "Displays page load time in the toolbar",
  "background": {
	"scripts": ["browser-polyfill.min.js","Jquery.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "stopwatch22.png"
  },
  "content_scripts": [{
    "matches": ["https://stackoverflow.com/"],
    "js": ["browser-polyfill.min.js", "performance.js"]
  }],
  "permissions": [
  "webNavigation",
    "activeTab",
    "storage",
	"tabs",
	"nativeMessaging"
  ],
  "icons": {
    "16": "stopwatch16.png",
    "48": "stopwatch48.png",
    "128": "stopwatch128.png"
  },
   "update_url": "https://temprgdiag967.blob.core.windows.net/crx/manifest.xml"
}